<!--pages/scan/scan.wxml-->

<view class='container'>

  <view class='header'>
    <image src='/images/location.png'></image>
    <view class='address'>
      {{word}}
    </view>
  </view>
  <view class='flex'>
  
    <image src='/images/logo1.png' class='logo'></image>
  </view>
  <view class='flex'>
    <view class='content flex' bindtap='scan'>
      
    </view>
  </view>

  <view class='history'>
    <view class='flex'>
      <input placeholder='{{placeholder}}' confirm-type="search" placeholder-class="placeholder" bindconfirm="bindconfirm" adjust-position="true" cursor-spacing="70" bindfocus="bindfocus" bindblur="bindblur"></input>
    </view>
    <view class='flex history'>
      <text class='history-hint'>扫描历史</text>
    </view>

    
  </view>
  <view class='flex bag'>
    <view class='bag-bar'>
    <!-- <image id='bag-img' mode='widthFix'></image> -->
      <view ><view class='iconfont icon-gouwudai'></view><text class='bag-text'>购物袋</text></view>
    </view>
  </view>
</view>