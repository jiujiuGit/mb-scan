/* pages/scan/scan.wxss */
page{
  background: url("https://image.mbgo.com/mc-ai.jpg?123") no-repeat;
  background-size:100% 100%; 
  height: 100%;
   
}
.container{
  padding: 10rpx 30rpx;
  font-size: 28rpx;
}
.header{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 5rpx;
}
.scan{
  width: 100rpx;
  height: 100rpx;
}
.top{
  background: #efeff4;
  width: 750rpx;
  font-size: 25rpx;
  padding-top:12px;
  padding-bottom:8px;
  color:#888;
  padding-left: 30rpx;
  box-sizing: border-box
}
.header image{
  width: 22rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.address{
  color:#dd0000;
  font-size: 28rpx;
}
.flex{
  display: flex;
  align-items: center;
  justify-content: center;
}
.content{
  margin-top: 60rpx;
}
.logo{
  width: 520rpx;
  height: 100rpx;
  margin-top: 100rpx;
}
.content{
  
  width: 300rpx;
  height: 300rpx;
  background: url("https://image.mbgo.com/mc-ai-btn.png") no-repeat;
  background-size:100% 100%;  
}
.content .btn{
  font-size: 35rpx;
  margin-top: 20rpx;
}
.placeholder{
  display: flex;
  align-items: center;
  justify-content:center;
  color:#9a9a9a;
  font-size: 28rpx;
}
.history{
  margin-top: 70rpx;
  /* width: 690rpx; */
  padding: 40rpx;
  box-sizing: border-box;
}
.history input{
  border:1px solid #bbbbbb;
  border-radius: 10rpx;
  width: 542rpx;
  height: 70rpx;

  padding: 0rpx 20rpx;
  text-align: center;

}
.history .scan-btn{
  height: 80rpx;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  background: #e64340;
  width: 140rpx;
  color:#ffffff;
}
.history{
  margin-top: 28rpx;
}
.history-hint{
  text-decoration: underline;
  color: #353535;
  font-size: 24rpx;
}
.bag{
  position: fixed;
  bottom: 50rpx;
  text-align: center;
  width: 690rpx;
  /* line-height: 108rpx; */
}
.bag-bar{
  width: 108rpx;
  height: 108rpx;
  background-color: #dd0000;
  border-radius: 50%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
#bag-img{
  width: 50rpx;
  height: 50rpx;
}
.bag-text{
  color: white;
  font-size: 24rpx;
}
.icon-gouwudai{
  color: white;
}