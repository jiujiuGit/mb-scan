/* pages/authorization/authorization.wxss */
.section{
  margin: 30rpx 0 60rpx 0;
}
.tel,.verCode{
  padding: 40rpx;
  align-items: center;
}
.tel>text,.verCode>text{
  font-size: 30rpx;
  color: #353535;
}
.tel>input{
  /* position: absolute; */
  /* right: 120rpx; */
  border-bottom: 1px solid #dcdcdc;
  flex-shrink: 1;
   margin-left: 20rpx;
}
.placeholder{
  font-size: 24rpx;
  color: #9a9a9a;

}
.verCode>input{
  border-bottom: 1px solid #dcdcdc;
  margin-left: 30rpx;
}
.fir{
  position: relative;
}
#wxLogin{
  position: absolute;
  right: 10rpx;
  bottom: 40rpx;
  border:none;
  background-color: rgba(0,0,0,0);
  color: #0000ff;
  font-size: 24rpx;
  z-index: 100;
  
}
#wxLogin::after{ border: none; }
#sendCode{
  background-color: white;
  font-size: 24rpx;
  color: #f39800;
  padding: 0;
  width: 152rpx;
  text-align: center;
  margin-left: 20rpx;
  border-radius: 4rpx;
}
#sendCode::after{
  border: 1px solid #f39800;
  
}
.login-btn{
  margin: 0 40rpx;
  background-color: #FADA63;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #353535;
}
.login-btn::after{
  border:none;
}